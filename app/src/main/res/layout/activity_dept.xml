<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeptActivity"
    android:background="#C6A1A1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"
                android:src="@drawable/banner">

            </ImageView>
            <TextView
                android:id="@+id/alltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:text="RPI All Depertments"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="#C12DD1"
                android:textSize="28sp">

            </TextView>
            <TextView
                android:id="@+id/cmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/alltext"
                android:layout_margin="22dp"
                android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                android:drawablePadding="10dp"
                android:padding="7dp"
                android:text="Computer Technology"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/ct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cmt"
                android:layout_margin="22dp"
                android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                android:drawablePadding="10dp"
                android:padding="7dp"
                android:text="Civil Technology"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ct"
                android:layout_margin="22dp"
                android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                android:drawablePadding="10dp"
                android:padding="7dp"
                android:text="Electrical Technology"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/ets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et"
                android:layout_margin="22dp"
                android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                android:drawablePadding="10dp"
                android:padding="7dp"
                android:text="Electronics Technology"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/mt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ets"
                android:layout_margin="22dp"
                android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                android:drawablePadding="10dp"
                android:padding="7dp"
                android:text="Mechanacial Technology"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/mct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mt"
                android:layout_margin="22dp"
                android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                android:drawablePadding="10dp"
                android:padding="7dp"
                android:text="Mechatronics Technology"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mct"
                android:layout_margin="22dp"
                android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                android:drawablePadding="10dp"
                android:padding="7dp"
                android:text="Power Technology"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/elt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pt"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="22dp"
                android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                android:drawablePadding="10dp"
                android:padding="7dp"
                android:text="Electromedical Technology"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:textSize="20sp">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>